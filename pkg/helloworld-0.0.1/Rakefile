require 'rubygems'
require 'rake'
require 'echoe'

Echoe.new('helloworld','0.0.1') do |p|
  p.description = "A gem that illustrates how to build a Gem"
  p.url = "http://github.com/manishdas/hello_world"
  p.author = "Manish Das"
  p.email = "manish.das@sprout-technology.com"
  p.summary = "A gem illustrating about how to build a Gem"
  p.ignore_pattern = ["tmp/*", "script/*"]
  p.development_dependencies = []
end